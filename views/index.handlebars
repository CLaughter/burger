<div class="container">
      <h2>Eat-Da-Burger</h2>
  <div class="jumbotron">
    <h1>Get In My Belly!</h1>
    <p>Burger Order Pickup</p>
    <br>
    <h2>Choose Your Pleasure</h2>
    
      <img src="/assets/img/burgerImg.jpg" alt="burgerImg" height="200" width="200">

    <panel>
      <form class="create-form">
        <div class="form-group">
          <label for="newBurger">Order Awesome Burgers</label>         
            <select data-placeholder="" id="newBurger" name="burger">
              <option value="Nothing Selected" selected>Please Select a Sandwich</option>
              <option value="CheeseBurger">Cheese Burger</option>
              <option value="MaxBurger">Max Burger</option>
              <option value="TeriBurger">Teriyaki Burger</option>
            </select>

          <button type="submit" class="btn btn-success" id="addBurger">
            <span class="fa fa-thumbs-up"></span>
          </button>
        </div>
      </form>
    </panel>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="leftSide"><strong>Order Awesomeness</strong>
          <p>Send order to cashier when ready for pick up</p>
        </div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
              <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
              <button type="button" class="eatBurger btn btn-warning" id="eatButton" data-id="{{this.id}}" data-newDevoured="{{devour}}">
              <span class="fa fa-usd"></span>
              </button>
              <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="rightSide"><strong>Burger is Ready for Pick Up</strong>
          <p>Remove order from pick up when delivered</p>
        </div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
              <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
              <button type="button" class="trashBurger btn btn-danger" id="trashButton" data-id="{{this.id}}" data-newDevoured="{{devour}}">
              <span class="fa fa-trash"></span></button>
              <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>